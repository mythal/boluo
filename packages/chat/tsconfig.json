{
  "extends": "@boluo/typescript-config/react-library.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.tsx"],

  "exclude": ["dist", "build", "node_modules"]
}
